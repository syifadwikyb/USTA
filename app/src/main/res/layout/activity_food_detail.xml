<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/food"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                style="@style/ImageButtonNoBackground"
                android:padding="8dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan/Minum"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="24sp"
                android:layout_marginLeft="100dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pemesanan"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/button_white"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_white"
            android:layout_marginTop="20dp"
            android:padding="20dp">
            <ImageView
                android:id="@+id/foodDrinkImageDetail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/rendang"
                android:layout_weight="3"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/foodDrinkNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasi Rendang"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_white"
            android:layout_marginTop="20dp"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Pesanan"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14dp"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp">
                <EditText
                    android:id="@+id/foodDrinkTotalDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_ticket_darkblue"
                    android:text="3"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/button_orange"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="UstaPay"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/ustaPayAmountDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 1.000.000"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"/>
                    <ImageButton
                        android:id="@+id/topUpButtonFoodDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/top_up"
                        style="@style/ImageButtonNoBackground"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_ticket_darkblue"
                android:layout_marginTop="20dp"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Pembayaran"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/foodDrinkPriceDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 50.000"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/buyButtonFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_darkblue"
                android:layout_marginTop="10dp"
                android:text="Pesan Sekarang"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>