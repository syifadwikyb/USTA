<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_white"
    android:layout_margin="20dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/foodDrinkImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rendang"
            android:layout_weight="1"
            android:scaleType="fitStart"/>
        <TextView
            android:id="@+id/foodDrinkName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nasi Rendang Sapi"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/foodDrinkPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 50.000"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/dark_blue"
                android:gravity="center"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageButton
                    android:id="@+id/substFoodDrink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/minus"
                    style="@style/ImageButtonNoBackground"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/foodDrinkTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:textSize="15sp"
                    android:background="@drawable/button_darkblue"
                    android:layout_weight="2"
                    android:padding="2dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:enabled="false"
                    />
                <ImageButton
                    android:id="@+id/addFoodDrink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/plus"
                    style="@style/ImageButtonNoBackground"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <Button
                android:id="@+id/buyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"
                android:text="Beli"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>